    function showSection(sectionId, clickedLink) {
        if (sectionId === 'admin-panel-section' && !isAdminLoggedIn) {
            showSection('admin-login-section', document.querySelector('header nav a.nav-link[onclick*="admin-login-section"]'));
            return;
        }
        
        sections.forEach(section => {
            section.classList.toggle('active', section.id === sectionId);
        });
        
        if (clickedLink && !clickedLink.classList.contains('admin-nav-link') && !clickedLink.classList.contains('dev-nav-link')) { 
           setActiveNavLink(clickedLink, clickedLink.closest('#mobile-menu') !== null);
        }
        
        if (sectionId === 'admin-panel-section') {
            const activeAdminSub = document.querySelector('.admin-main-subsection.active');
            if (!activeAdminSub || activeAdminSub.id !== 'admin-developer-subsection' || (clickedLink && clickedLink.getAttribute('onclick').includes('admin-dashboard-subsection'))) {
                 showAdminSubSection('admin-dashboard-subsection', document.querySelector('#admin-nav a[onclick*="admin-dashboard-subsection"]'));
            }
            updateDashboardData();
            document.getElementById('admin-sidebar').style.display = 'block';
            document.getElementById('return-to-admin-btn').style.display = 'none';
            isCustomerViewMode = false;
        } else if (sectionId !== 'admin-login-section' && sectionId !== 'developer-login-section-template' && !isCustomerViewMode) { 
            const adminSidebar = document.getElementById('admin-sidebar');
            if (adminSidebar) adminSidebar.style.display = 'none'; 
        }
        window.scrollTo(0, 0);
    }

