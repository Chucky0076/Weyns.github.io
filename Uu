            editItemIdInputEl = adminMenuSubSection.querySelector('input[type="hidden"]'); 
            
            if(adminMenuFormEl) {
                adminMenuFormEl.removeEventListener('submit', handleAdminMenuFormSubmit);
                adminMenuFormEl.addEventListener('submit', handleAdminMenuFormSubmit);
            }
        }
