    function adminLogout() { /* ... same as before ... */ }
    
    function handleDeveloperTabClick(clickedLink) {
        const devSubSectionContainer = document.getElementById('admin-developer-subsection');
        if (!isDeveloperLoggedIn) {
            devSubSectionContainer.innerHTML = document.getElementById('developer-login-section-content-template').innerHTML;
            const devLoginFormInstance = devSubSectionContainer.querySelector('#developer-login-form-instance');
            if (devLoginFormInstance) {
                 devLoginFormInstance.addEventListener('submit', handleDeveloperLogin);
            }
        } else {
            if (!devSubSectionContainer.querySelector('#developer-nav-instance')) { 
                loadDeveloperToolsContent(devSubSectionContainer);
            }
            // Default to appearance or last active dev tab if possible
            const activeDevSub = devSubSectionContainer.querySelector('.dev-subsection.active');
            if(!activeDevSub){
                showDevSubSection('dev-appearance-subsection', devSubSectionContainer.querySelector('#developer-nav-instance a[onclick*="dev-appearance-subsection"]'));
            }
            loadDeveloperSettings(); 
        }
        document.querySelectorAll('.admin-main-subsection').forEach(sub => sub.classList.remove('active'));
        devSubSectionContainer.classList.add('active');

        adminNavLinks.forEach(link => link.classList.remove('active-link'));
        if (clickedLink) clickedLink.classList.add('active-link');
    }


    function handleDeveloperLogin(e) {
        e.preventDefault();
        const devSubSectionContainer = document.getElementById('admin-developer-subsection');
        const usernameInput = devSubSectionContainer.querySelector('#dev-username-form-instance');
        const passwordInput = devSubSectionContainer.querySelector('#dev-password-form-instance');
        const errorMsgEl = devSubSectionContainer.querySelector('#developer-login-error-form-instance');

        const username = usernameInput ? usernameInput.value : '';
        const password = passwordInput ? passwordInput.value : '';


        if (username === 'dev' && password === 'devpass') {
            isDeveloperLoggedIn = true;
            if(errorMsgEl) errorMsgEl.textContent = '';
            loadDeveloperToolsContent(devSubSectionContainer);
            const firstDevNavLink = devSubSectionContainer.querySelector('#developer-nav-instance a');
             if (firstDevNavLink) {
                showDevSubSection(firstDevNavLink.getAttribute('onclick').match(/'([^']*)'/)[1], firstDevNavLink);
             }
            loadDeveloperSettings();
        } else {
            isDeveloperLoggedIn = false;
            if(errorMsgEl) errorMsgEl.textContent = 'Usuário ou senha de desenvolvedor inválidos.';
        }
    }
    
    function loadDeveloperToolsContent(container) {
        container.innerHTML = document.getElementById('developer-tools-content-template').innerHTML;
        
        container.querySelectorAll('#developer-nav-instance a.dev-nav-link').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const targetSubSection = this.getAttribute('onclick').match(/'([^']*)'/)[1];
                showDevSubSection(targetSubSection, this);
            });
        });
        
        const devAppearanceBtn = container.querySelector('button[onclick="applyDevAppearance()"]');
        if(devAppearanceBtn) devAppearanceBtn.addEventListener('click', applyDevAppearance);
        
        const devStaticContentBtn = container.querySelector('button[onclick="applyDevStaticContent()"]');
        if(devStaticContentBtn) devStaticContentBtn.addEventListener('click', applyDevStaticContent);

        const devGeneralSettingsBtn = container.querySelector('button[onclick="applyDevGeneralSettings()"]');
        if(devGeneralSettingsBtn) devGeneralSettingsBtn.addEventListener('click', applyDevGeneralSettings);
        
        const devRawDataBtn = container.querySelector('button[onclick="applyDevRawData()"]');
        if(devRawDataBtn) devRawDataBtn.addEventListener('click', applyDevRawData);
        
        const resetDevBtn = container.querySelector('button[onclick="resetDeveloperSettingsToDefault()"]');
        if(resetDevBtn) resetDevBtn.addEventListener('click', resetDeveloperSettingsToDefault);

        loadDeveloperSettings(); 
    }


    function showAdminSubSection(subSectionId, clickedLink) {
        if (subSectionId === 'admin-developer-subsection') {
            handleDeveloperTabClick(clickedLink); 
            return;
        }

        document.querySelectorAll('.admin-main-subsection').forEach(sub => {
            sub.classList.toggle('active', sub.id === subSectionId);
        });
        adminNavLinks.forEach(link => link.classList.remove('active-link'));
        if (clickedLink) {
            clickedLink.classList.add('active-link');
        }
        if (subSectionId === 'admin-dashboard-subsection') updateDashboardData();
        if (subSectionId === 'admin-orders-subsection') renderIncomingOrdersTable();
        if (subSectionId === 'admin-menu-subsection') renderCurrentMenuItems();
        if (subSectionId === 'admin-customers-subsection') renderAdminCustomersTable();
        if (subSectionId === 'admin-reports-subsection') renderAdminReportsCharts();
    }
    
    function showDevSubSection(subSectionId, clickedLink) {
        const devSectionContainer = document.getElementById('admin-developer-subsection');
        if (!devSectionContainer) return;

        devSectionContainer.querySelectorAll('.dev-subsection').forEach(sub => {
            sub.classList.toggle('active', sub.id === subSectionId);
        });
        devSectionContainer.querySelectorAll('#developer-nav-instance a.dev-nav-link').forEach(link => {
            link.classList.remove('active-link');
             link.style.color = 'var(--text-color-base)'; 
             link.style.borderBottomColor = 'transparent';
        });
        if (clickedLink) {
            clickedLink.classList.add('active-link');
            clickedLink.style.color = 'var(--primary-color)'; 
            clickedLink.style.borderBottomColor = 'var(--primary-color)';
        }
    }
