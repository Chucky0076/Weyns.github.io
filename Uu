    function fillStaticSection(sectionId, content) {
        const sectionElement = document.getElementById(sectionId);
        if (sectionElement && sectionElement.innerHTML.trim() === '') {
            sectionElement.innerHTML = content;
            if (sectionId === 'home-section') { 
                const carouselContainer = document.getElementById('promotions-carousel-container');
                if (carouselContainer) {
                    // Content for carousel is already in the main HTML for home-section
                    const newCarouselItems = carouselContainer.querySelectorAll('.carousel-item');
                    const newPrevBtn = carouselContainer.querySelector('#prevBtn');
                    const newNextBtn = carouselContainer.querySelector('#nextBtn');
                    if (newPrevBtn && newNextBtn && newCarouselItems.length > 0) {
                        currentCarouselIndex = 0; 
                        showCarouselItem(currentCarouselIndex); 
                        newPrevBtn.addEventListener('click', () => { prevCarouselItem(); resetAutoSlide(); });
                        newNextBtn.addEventListener('click', () => { nextCarouselItem(); resetAutoSlide(); });
                        if(autoSlideInterval) clearInterval(autoSlideInterval); 
                        function startAutoSlide() { autoSlideInterval = setInterval(nextCarouselItem, 5000); }
                        function resetAutoSlide() { clearInterval(autoSlideInterval); startAutoSlide(); }
                        startAutoSlide();
                    }
                }
            } else if (sectionId === 'cardapio-section') {
                const checkoutFormContainer = document.getElementById('mock-checkout-form-container');
                if (checkoutFormContainer && checkoutFormContainer.innerHTML.trim() === '') {
                    checkoutFormContainer.innerHTML = `<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6"><div><label for="nome" class="block text-sm font-medium text-neutral-700 mb-1">Nome Completo</label><input type="text" id="nome" name="nome" class="input-admin" placeholder="Seu Nome"></div><div><label for="telefone" class="block text-sm font-medium text-neutral-700 mb-1">Telefone / WhatsApp</label><input type="tel" id="telefone" name="telefone" class="input-admin" placeholder="(XX) XXXXX-XXXX"></div></div><div class="mb-6"><label for="endereco" class="block text-sm font-medium text-neutral-700 mb-1">Endereço de Entrega</label><input type="text" id="endereco" name="endereco" class="input-admin" placeholder="Rua, Número, Bairro, Cidade (ou deixe em branco para retirada)"></div><div class="mb-6"><label class="block text-sm font-medium text-neutral-700 mb-1">Forma de Pagamento</label><select id="pagamento" name="pagamento" class="input-admin"><option>Cartão de Crédito na Entrega</option><option>Cartão de Débito na Entrega</option><option>PIX na Entrega</option><option>Dinheiro</option></select></div><button type="button" onclick="handlePlaceOrder()" class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-4 rounded-lg text-lg transition duration-300">Confirmar Pedido (Mock)</button>`;
                }
            }
        }
    }
    function fillAdminSubSectionHTML(sectionId, content) {
        const sectionElement = document.getElementById(sectionId);
        if (sectionElement && sectionElement.innerHTML.trim() === '') {
            sectionElement.innerHTML = content;
            if(sectionId === 'admin-orders-subsection') {
                 const filterEl = sectionElement.querySelector('#order-status-filter');
                 if(filterEl) filterEl.addEventListener('change', renderIncomingOrdersTable);
            }
        }
    }

</script>

</body>
</html>
